<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:padding="@dimen/ten" >

        <ImageView
            android:id="@+id/fangchan_img"
            android:layout_width="@dimen/one_hundred"
            android:layout_height="@dimen/eighty_five"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/fangchan_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_five"
            android:layout_marginLeft="@dimen/ten"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fc_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fc_title"
                android:textSize="@dimen/t_twenty" />

            <TextView
                android:id="@+id/fc_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fc_price"
                android:textColor="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fc_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="@string/fc_address"
                    android:textColor="@color/text_light" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fc_addtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fc_addtime" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/content_background_color" />

</LinearLayout>