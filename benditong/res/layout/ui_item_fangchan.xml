<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/ten" >

    <ImageView
        android:id="@+id/fangchan_img"
        android:layout_width="@dimen/eighty"
        android:layout_height="@dimen/seventy"
        android:scaleType="fitXY"
        android:src="@drawable/fangchan_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy"
        android:layout_marginLeft="@dimen/ten"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fc_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fc_title" />

        <TextView
            android:id="@+id/fc_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/orange"
            android:text="@string/fc_price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fc_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fc_address" 
                android:singleLine="true"/>
            <View 
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fc_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fc_addtime" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>